@using ExploreCalifornia.Models

<h1>Explorer's Blog</h1>
<p>
    Below are a few of the latest posts from some of our explorers.
</p>

<div class="blog-posts">
    @foreach(Post post in Model)
    {
        @await Html.PartialAsync("_Post", post)
    }
</div>

<p class="pager">
    <center>
        @if (ViewBag.HasPreviousPage)
        {
            <a class="prev" href="@Url.Action("Index","Blog", new {page = ViewBag.PreviousPage})">&lt;</a>
        }

        @if (ViewBag.HasNextPage)
        {
            <a class="next" href="@Url.Action("Index","Blog", new {page = ViewBag.NextPage})">&gt;</a>
        }
    </center>
</p>